package main

import (
	"log"
	"os"

	"github.com/gocopper/copper"
)

func main() {
	app, err := copper.InitApp()
	if err != nil {
		log.Fatal(err)
	}

	server, err := InitServer(app)
	if err != nil {
        app.Logger.Error("Failed to init server", err)
        os.Exit(1)
    }

	app.Start(server)
}
